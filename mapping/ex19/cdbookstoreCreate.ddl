CREATE TABLE ITEM (ID BIGINT NOT NULL, DTYPE VARCHAR(31), DESCRIPTION VARCHAR, PRICE DOUBLE, TITLE VARCHAR, ILLUSTRATIONS BOOLEAN, ISBN VARCHAR, NBOFPAGES INTEGER, PUBLISHER VARCHAR, GENRE VARCHAR, MUSICCOMPANY VARCHAR, NUMBEROFCDS INTEGER, TOTALDURATION DOUBLE, PRIMARY KEY (ID))
CREATE TABLE NEWS (ID BIGINT NOT NULL, CONTENT VARCHAR NOT NULL, PRIMARY KEY (ID))
CREATE TABLE COMMENT (ID BIGINT NOT NULL, CONTENT VARCHAR, NICKNAME VARCHAR, NOTE INTEGER, COMMENTS_ID BIGINT, publication_index INTEGER, PRIMARY KEY (ID))
ALTER TABLE COMMENT ADD CONSTRAINT FK_COMMENT_COMMENTS_ID FOREIGN KEY (COMMENTS_ID) REFERENCES NEWS (ID)
