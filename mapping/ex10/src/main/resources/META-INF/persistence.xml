<?xml version="1.0" encoding="UTF-8"?>
<!-- tag::adocSnippet[] -->
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">

  <persistence-unit name="vintageStorePU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <mapping-file>META-INF/book_mapping.xml</mapping-file>
    <!-- tag::adocSkip[] -->
    <properties>
      <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
      <property name="jakarta.persistence.schema-generation.scripts.action" value="drop-and-create"/>
      <property name="jakarta.persistence.schema-generation.scripts.create-target" value="vintageStoreCreate.ddl"/>
      <property name="jakarta.persistence.schema-generation.scripts.drop-target" value="vintageStoreDrop.ddl"/>
      <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:mem:vintageStoreDB"/>
    </properties>
    <!-- end::adocSkip[] -->
  </persistence-unit>
</persistence>
<!-- end::adocSnippet[] -->
