<?xml version="1.0" encoding="UTF-8"?>
<!-- tag::adocSnippet[] -->
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">
  <persistence-unit name="vintageStorePU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>org.agoncal.fascicle.jpa.gettingstarted.Artist</class>
    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:tcp://localhost/~/vintageStoreDB"/>
      <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
      <property name="jakarta.persistence.schema-generation.scripts.action" value="drop-and-create"/>
      <property name="jakarta.persistence.schema-generation.scripts.create-target" value="vintageStoreCreate.ddl"/>
      <property name="jakarta.persistence.schema-generation.scripts.drop-target" value="vintageStoreDrop.ddl"/>
    </properties>
  </persistence-unit>
</persistence>
<!-- end::adocSnippet[] -->
